<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="br.com.vostre.circular.view.DetalhesItinerarioActivity" />

        <variable
            name="viewModel"
            type="br.com.vostre.circular.viewModel.DetalhesItinerarioViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        tools:context="br.com.vostre.circular.view.DetalhesItinerarioActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="onFabBairroClick"
            android:src="@drawable/bairro"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCentro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="onFabCentroClick"
            android:src="@drawable/centro"
            app:fabSize="mini"
            android:backgroundTint="@color/ciano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fabBairro" />

        <Button
            android:id="@+id/btnRegistrarViagem"
            style="@style/botao_transparente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{view::onClickBtnRegistrarViagem}"
            android:padding="0dp"
            android:text="Registrar Viagem"
            android:textColor="@color/branco"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:id="@+id/layoutItinerario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLinha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text='@{viewModel.iti.itinerario.sigla != null ? `Linha: `+viewModel.iti.itinerario.sigla : "Código da linha não cadastrado."}'
                        android:textAppearance="@style/texto_azul"
                        tools:text="Linha: P115" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Partida"
                                android:textAppearance="@style/texto_azul" />

                            <TextView
                                android:id="@+id/textViewBairroPartida"
                                style="@style/texto_lista"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@{(viewModel.iti.itinerario.aliasBairroPartida == null || viewModel.iti.itinerario.aliasBairroPartida.isEmpty) ? viewModel.iti.nomeBairroPartida : viewModel.iti.itinerario.aliasBairroPartida}" />

                            <TextView
                                android:id="@+id/textViewCidadePartida"
                                style="@style/texto_lista_menor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:text="@{(viewModel.iti.itinerario.aliasCidadePartida == null || viewModel.iti.itinerario.aliasCidadePartida.isEmpty) ? viewModel.iti.nomeCidadePartida : viewModel.iti.itinerario.aliasCidadePartida}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Destino"
                                android:textAppearance="@style/texto_azul" />

                            <TextView
                                android:id="@+id/textViewBairroDestino"
                                style="@style/texto_lista"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@{(viewModel.iti.itinerario.aliasBairroDestino == null || viewModel.iti.itinerario.aliasBairroDestino.isEmpty) ? viewModel.iti.nomeBairroDestino : viewModel.iti.itinerario.aliasBairroDestino}" />

                            <TextView
                                android:id="@+id/textViewCidadeDestino"
                                style="@style/texto_lista_menor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:text="@{(viewModel.iti.itinerario.aliasCidadeDestino == null || viewModel.iti.itinerario.aliasCidadeDestino.isEmpty) ? viewModel.iti.nomeCidadeDestino : viewModel.iti.itinerario.aliasCidadeDestino}" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_local_atm_blue_24dp" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@{viewModel.iti.itinerario.tarifa}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_access_time_blue_24dp" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                app:text="@{viewModel.iti.itinerario.tempo}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_directions_blue_24dp" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                app:distancia="@{viewModel.iti.itinerario.distanciaMetros}" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:background="@color/transparente"
                        android:onClick="onClickBtnEditar"
                        android:padding="10dp"
                        android:src="@drawable/ic_edit_blue_24dp"
                        android:textAppearance="@style/texto_azul"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnDistancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:background="@color/transparente"
                        android:onClick="onClickBtnDistancia"
                        android:padding="10dp"
                        android:src="@drawable/ic_directions_blue_24dp"
                        android:textAppearance="@style/texto_azul"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnHistorico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparente"
                        android:onClick="onClickBtnHistorico"
                        android:src="@drawable/ic_local_atm_blue_24dp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            style="@style/texto_branco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Paradas Selecionadas"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Pressione e Arraste para reordenar"
            android:textColor="@color/branco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listParadas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btnIniciar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:listitem="@layout/linha_paradas_itinerarios" />

        <Button
            android:id="@+id/btnIniciar"
            style="@style/botao_branco"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{view::onClickBtnSalvar}"
            android:text="Salvar"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <Button
                android:id="@+id/btnSecoes"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/transparente"
                android:drawableLeft="@drawable/ic_list_white_24dp"
                android:onClick="@{view::onClickBtnSecoes}"
                android:text="Gerenciar Seções"
                android:textAppearance="@style/texto_branco"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHorarios"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/transparente"
                android:drawableLeft="@drawable/ic_access_time_white_24dp"
                android:onClick="@{view::onClickBtnHorarios}"
                android:text="Gerenciar  Horários"
                android:textAppearance="@style/texto_branco"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOcultarMapa"
            style="@style/botao_transparente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{view::ocultarMapa}"
            android:padding="0dp"
            android:text="Ocultar/Exibir Mapa"
            android:textColor="@color/branco"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <Button
            android:id="@+id/btnTrechos"
            style="@style/botao_transparente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ver Trechos"
            android:onClick="onClickBtnVerTrechos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listParadas" />

        <Button
            android:id="@+id/btnAtualizaTrechos"
            style="@style/botao_transparente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="onClickBtnAtualizaTrechos"
            android:text="Atualizar Trechos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listParadas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>