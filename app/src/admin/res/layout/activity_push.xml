<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="view"
            type="br.com.vostre.circular.view.PushActivity" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradiente"
                tools:context="br.com.vostre.circular.view.PaisesActivity">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></include>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:hint="Título"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout12">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDescricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mensagem"
                        android:inputType="textLongMessage|textMultiLine"
                        android:maxLines="10"
                        android:minLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnAtualizacao"
                    style="@style/botao_branco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:onClick="onClickBtnAtualizacao"
                    android:text="Forçar Atualização"
                    app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
                    app:layout_constraintTop_toBottomOf="@+id/textView50" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkedButton="@id/radioButtonMenu"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView50">

                    <RadioButton
                        android:id="@+id/radioButtonMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Inicial" />

                    <RadioButton
                        android:id="@+id/radioButtonItinerarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Itinerários" />

                    <RadioButton
                        android:id="@+id/radioButtonParadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Paradas" />

                    <RadioButton
                        android:id="@+id/radioButtonMapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Mapa" />

                    <RadioButton
                        android:id="@+id/radioButtonMensagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Mensagens" />

                    <RadioButton
                        android:id="@+id/radioButtonDetalhesItinerario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Detalhes Itinerário" />

                    <RadioButton
                        android:id="@+id/radioButtonDetalhesParada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Detalhes Parada" />

                    <RadioButton
                        android:id="@+id/radioButtonDetalhesPoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tela Detalhes POI" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tela de Destino"
                    android:textAppearance="@style/texto_branco"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout13" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Itinerário Escolhido"
                    android:textAppearance="@style/texto_branco"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

                <Button
                    android:id="@+id/btnEnviar"
                    style="@style/botao_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Enviar"
                    android:onClick="onClickBtnEnviar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPoi" />

                <TextView
                    android:id="@+id/textViewItinerario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/texto_branco"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView52"
                    tools:text="Centro (Barra do Piraí) x Centro (Valença)" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Parada Escolhida"
                    android:textAppearance="@style/texto_branco"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewItinerario" />

                <TextView
                    android:id="@+id/textViewParada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/texto_branco"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView55"
                    tools:text="Rodoviária Roberto Silveira (Centro - Barra do Piraí)" />

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ponto de Interesse Escolhido"
                    android:textStyle="bold"
                    android:textAppearance="@style/texto_branco"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewParada" />

                <TextView
                    android:id="@+id/textViewPoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/texto_branco"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView57"
                    tools:text="Matriz São Benedito (Centro - Barra do Piraí)" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>