<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="trecho"
            type="br.com.vostre.circular.model.pojo.TrechoPartidaDestino" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewCidadePartida"
            style="@style/texto_lista_menor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@{trecho.nomeCidadePartida}"
            app:layout_constraintEnd_toStartOf="@+id/textViewCidadeDestino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBairroPartida"
            tools:text="Cidade" />

        <TextView
            android:id="@+id/textViewBairroPartida"
            style="@style/texto_lista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@{trecho.nomeBairroPartida}"
            app:layout_constraintEnd_toStartOf="@+id/textViewBairroDestino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:text="Bairro" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Partida"
            android:textAppearance="@style/texto_azul"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Destino"
            android:textAppearance="@style/texto_azul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewBairroDestino"
            style="@style/texto_lista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@{trecho.nomeBairroDestino}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:text="Bairro" />

        <TextView
            android:id="@+id/textViewCidadeDestino"
            style="@style/texto_lista_menor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@{trecho.nomeCidadeDestino}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toBottomOf="@+id/textViewBairroDestino"
            tools:text="Cidade" />

        <TextView
            android:id="@+id/textViewDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@{trecho.tpr2.distanciaTrechoMetros+` metros`}"
            android:textAppearance="@style/texto_azul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCidadePartida"
            tools:text="583 m" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="205dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>