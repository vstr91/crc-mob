<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/azul</item>

        <item name="android:statusBarColor">@color/ciano</item>
        <item name="android:colorControlActivated">@color/ciano</item>

        <!-- Barra Topo -->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="windowActionBarOverlay">true</item>-->
        <!--<item name="actionBarStyle">@style/Transparent</item>-->
        <!-- Fim Barra Topo -->
    </style>

    <style name="Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="topo">
        <item name="android:background">@color/ciano</item>
    </style>

    <style name="botao" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="botao_branco" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_corner_button_branco</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="botao_transparente" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparente</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="botao_fechar" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparente</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <!--<item name="android:borderlessButtonStyle">true</item>-->
    </style>

    <style name="botao_fechar_branco" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparente</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <!--<item name="android:borderlessButtonStyle">true</item>-->
    </style>

    <style name="botao_principal" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_corner_button_principal</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="texto_branco" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="texto_azul" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="badge">
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="texto_lista">
        <item name="android:textColor">@color/cinzaEscuro</item>
    </style>

    <style name="calendario" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/branco</item>
        <item name="android:dateTextAppearance">@style/texto_branco</item>
        <item name="android:yearListItemTextAppearance">@style/texto_branco</item>
        <item name="android:headerYearTextAppearance">@style/texto_branco</item>
        <item name="android:headerMonthTextAppearance">@style/texto_branco</item>
    </style>

    <style name="tabhost">
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorSecondary">@color/cinzaClaro</item>
    </style>

</resources>
