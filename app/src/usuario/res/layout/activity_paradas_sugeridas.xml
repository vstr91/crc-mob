<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="br.com.vostre.circular.view.ParadasSugeridasActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        tools:context="br.com.vostre.circular.view.ParadasSugeridasActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <TabHost
            android:id="@+id/tabs"
            style="@style/TabWidget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.NestedScrollView
                            android:overScrollMode="never"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView26"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Paradas"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listSugestoes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="200dp"
                                    android:paddingBottom="20dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView26"
                                    tools:listitem="@layout/linha_paradas_sugeridas">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewParadaPendenteVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de parada aguardando aprovação. Que tal sugerir mais?"
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listSugestoes" />

                                <TextView
                                    android:id="@+id/textView29"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Pontos de Interesse"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewParadaPendenteVazia" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listSugestoesPois"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="200dp"
                                    android:paddingBottom="20dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView29"
                                    tools:listitem="@layout/linha_pois_sugeridos">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewPoiPendenteVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de ponto de interesse aguardando aprovação. Que tal sugerir mais?"
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listSugestoesPois" />

                            </android.support.constraint.ConstraintLayout>

                        </android.support.v4.widget.NestedScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.NestedScrollView
                            android:overScrollMode="never"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView27"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Paradas"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listAceitas"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="200dp"
                                    android:paddingBottom="20dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView27"
                                    tools:listitem="@layout/linha_paradas_sugeridas">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewParadaAceitaVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de parada foi aprovada. Quando uma parada sugerida for aceita, ela aparecerá aqui."
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listAceitas" />

                                <TextView
                                    android:id="@+id/textView30"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Pontos de Interesse"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewParadaAceitaVazia" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listAceitasPois"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="200dp"
                                    android:paddingBottom="20dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView30"
                                    tools:listitem="@layout/linha_pois_sugeridos">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewPoiAceitaVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de ponto de interesse aceita. Quando um ponto de interesse for aceito, ele aparecerá aqui."
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listAceitasPois" />

                            </android.support.constraint.ConstraintLayout>

                        </android.support.v4.widget.NestedScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.NestedScrollView
                            android:overScrollMode="never"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView31"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Paradas"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listRejeitadas"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="150dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView31"
                                    tools:listitem="@layout/linha_paradas_sugeridas">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewParadaRejeitadaVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de parada foi rejeitada. Se uma parada sugerida não for aceita, ela aparecerá aqui."
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listRejeitadas" />

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_horizontal|center"
                                    android:paddingTop="5dp"
                                    android:text="Pontos de Interesse"
                                    android:textAppearance="@style/texto_branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textViewParadaRejeitadaVazia" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/listRejeitadasPois"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxHeight="70dp"
                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                                    tools:listitem="@layout/linha_pois_sugeridos">

                                </android.support.v7.widget.RecyclerView>

                                <TextView
                                    android:id="@+id/textViewPoiRejeitadoVazia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Nenhuma sugestão de ponto de interesse rejeitada. Se um ponto de interesse for rejeitado, ele aparecerá aqui."
                                    android:textColor="@color/branco"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/listRejeitadasPois" />

                            </android.support.constraint.ConstraintLayout>

                        </android.support.v4.widget.NestedScrollView>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>


    </android.support.constraint.ConstraintLayout>

</layout>