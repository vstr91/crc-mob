<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="parada"
            type="br.com.vostre.circular.model.pojo.ParadaBairro" />
        <variable
            name="imagem"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparente">

        <!--<br.com.vostre.circleview.CircleView-->
        <!--android:id="@+id/circleView2"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:corArcoMaior="@color/azul"-->
        <!--app:corArcoMenor="@color/azul"-->
        <!--app:imagem="@{cidade.cidade.brasao}"-->
        <!--app:espessuraArcoMaior="8"-->
        <!--app:espessuraArcoMenor="8"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/textViewBairro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparente"
            android:padding="10dp"
            android:text="@{parada.nomeBairro}"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bairro" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBairro">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewNome"
                    style="@style/texto_lista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{parada.parada.nome}"
                    app:layout_constraintEnd_toStartOf="@+id/textView86"
                    app:layout_constraintStart_toEndOf="@+id/circleView2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="parada" />

                <ImageView
                    android:id="@+id/circleView2"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:imagem="@{parada.parada.imagem}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewRua"
                    style="@style/texto_lista_menor"
                    text="@{parada.parada.rua}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView86"
                    app:layout_constraintStart_toStartOf="@+id/textViewNome"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNome"
                    tools:text="Nome da Rua" />

                <TextView
                    android:id="@+id/textView86"
                    style="@style/texto_lista_menor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Sentido"
                    android:textColor="@color/cinzaEscuro"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewSentido"
                    style="@style/texto_lista"
                    text="@{parada.parada.sentidoTexto}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/texto_azul"
                    android:textColor="@{parada.parada.sentido == 1 ? @color/ciano : @color/azul}"
                    app:layout_constraintEnd_toEndOf="@+id/textView86"
                    app:layout_constraintStart_toStartOf="@+id/textView86"
                    app:layout_constraintTop_toBottomOf="@+id/textView86"
                    tools:text="Centro" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>